<h2 style="text-align:center; margin:20px 0;">Review for <%= @restaurant.name %></h2>

<div class="container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.select :rating, [1, 2, 3, 4, 5] %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
  <p style="margin-top: 20px; font-size: 12px;"><%= link_to "Back", restaurant_path(@restaurant) %></p>
</div>
